h1= question.title
p= question.body

- if question.files.attached?
  = render 'shared/files', files: question.files

- if current_user&.author_of?(question)
  ul.question_actions
    li= link_to 'Edit', '#', class: 'edit-question-link', data: { question_id: question.id }
    = form_with model: question, class: 'hidden', html: {id: "edit-question-#{question.id}"} do |f|
      .question_errors= render 'shared/errors', resource: question
      = f.label :title
      = f.text_field :title
      = f.label :body
      = f.text_area :body
      = f.label :files
      = f.file_field :files, multiple: true
      = f.submit 'Save'
    li= link_to 'Delete', question_path(question), method: :delete, data: { confirm: 'Are your sure?' }
