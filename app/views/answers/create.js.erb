$('.answer-errors').html('<%= render 'shared/errors', resource: @answer %>');

<% if @answer.persisted? %>
  $('.question_answers').append('<%= j render @answer %>');
  $('.new-answer #answer_body').val('');
  $('.new-answer #answer_files').val('').removeAttr("disabled");
  $('.new-answer input[type="hidden"][name="answer[files][]"]').remove();
<% end %>
